<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Login Your Existing Account</h1>
    <form action="/login" method="POST" class="max-w-md mx-auto">
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
        <input type="email" id="email" name="email" placeholder="john@xyz.com" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400" value="<%= oldValues.email ? oldValues.email : '' %>" required>
      </div>
      <div class="mb-6">
        <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter Your Password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400" required>
      </div>
      <%- include('../partials/errorsMessageAuth') %>
      <input type="submit" value="Login" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
    </form>
  </main>
</body>

</html>

