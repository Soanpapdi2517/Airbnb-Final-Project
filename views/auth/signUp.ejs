<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Create a New Account here</h1>
    <form action="/signup" method="POST" class="max-w-md mx-auto">
      <div class="mb-4 grid grid-cols-1 gap-4">
        <div class="flex gap-4">
          <div class="flex flex-col gap-1 w-1/2">
            <label for="firstName" class="text-gray-700 font-semibold mb-1">First Name</label>
            <div class="flex items-center gap-2">
              <i class="fas fa-user text-red-400 text-lg"></i>
              <input type="text" id="firstName" name="firstName" placeholder="First Name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400" value="<%= oldValues.firstName ? oldValues.firstName : '' %>" required>  <!-- oldvalues.firstName will be undefined in case of getSignUp -->
            </div>
          </div>
          <div class="flex flex-col gap-1 w-1/2">
            <label for="lastName" class="text-gray-700 font-semibold mb-1">Last Name</label>
            <div class="flex items-center gap-2">
              <i class="fas fa-user text-red-400 text-lg"></i>
              <input type="text" id="lastName" name="lastName" placeholder="Last Name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"  value="<%= oldValues.lastName ? oldValues.lastName : '' %>">
            </div>
          </div>
        </div>
        <div class="flex flex-col gap-1">
          <label for="email" class="text-gray-700 font-semibold mb-1">Email Address</label>
          <div class="flex items-center gap-2">
            <i class="fas fa-envelope text-red-400 text-lg"></i>
            <input type="email" id="email" name="email" placeholder="Email Address" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"  value="<%= oldValues.email ? oldValues.email : '' %>" required>
          </div>
        </div>
      </div>
      <div class="mb-6 grid grid-cols-1 gap-4">
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter Your Password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400" required>
        </div>
        <div>
          <label for="confirmPassword" class="block text-gray-700 font-semibold mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Your Password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-400" required>
        </div>
      </div>
      <div class="mb-4 flex flex-col items-center">
        <p class="text-gray-700 font-semibold mb-3">Sign up as</p>
        <div class="flex gap-6">
          <label class="inline-flex items-center cursor-pointer">
            <input type="radio" id="guest" name="userType" value="guest" class="form-radio text-red-500" <%= oldValues.userType === 'guest' ? 'checked': '' %> required>
            <span class="ml-2 text-gray-700 font-medium">Guest</span>
          </label>
        <label class="inline-flex items-center cursor-pointer">
          <input type="radio" id="host" name="userType" value="host" class="form-radio text-red-500" <%= oldValues.userType === 'host' ? 'checked': '' %> required>
          <span class="ml-2 text-gray-700 font-medium">Host</span>
        </label>
      </div>
      <div class="mb-4 flex items-center">
        <input type="checkbox" id="terms&condition" name="t&c" class="form-checkbox text-red-500" required>
        <label for="terms&condition" class="ml-2 text-gray-700">I agree to the <a href="#" class="text-red-500 underline">Terms & Conditions</a></label>
      </div>
          <%- include('../partials/errorsMessageAuth') %>
      <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-500 text-white font-bold py-2 rounded-full shadow-lg hover:from-red-600 hover:to-pink-600 transition duration-300 flex items-center justify-center gap-2">
        <i class="fas fa-user-plus"></i> Sign Up
      </button>
    </form>
  </main>
</body>

</html>

