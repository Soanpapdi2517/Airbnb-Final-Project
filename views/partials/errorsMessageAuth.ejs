<div>
  <% if(errorsMessage.length > 0 && errorsMessage !== 'undefined') { %>
  <ul
    class="bg-red-500/90 border border-red-600 text-white rounded px-2 py-1 mb-3 text-xs max-w-md mx-auto shadow-sm min-w-[18rem]"
  >
    <% errorsMessage.forEach(error => { %>
    <li class="flex items-center gap-1 mb-0.5 last:mb-0">
      <span class="inline-block w-1.5 h-1.5 bg-white rounded-full"></span>
      <%= error %>
    </li>
    <% }) %>
  </ul>
  <% } %>
</div>
